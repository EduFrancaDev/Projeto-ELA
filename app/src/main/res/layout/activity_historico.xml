<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232439"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Histórico de chamados"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_marginBottom="16dp" />

        <!-- Aqui você pode usar uma RecyclerView futuramente -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Chamado 1: 13/06/2025 - Emergência confirmada"
            android:textColor="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Chamado 2: 14/06/2025 - Acidental"
            android:textColor="#CCCCCC" />

        <!-- Adicione mais como quiser -->
    </LinearLayout>
</ScrollView>
